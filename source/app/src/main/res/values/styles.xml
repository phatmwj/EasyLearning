<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">#1E1F21</item>
        <item name="android:statusBarColor">#1E1F21</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
<!--        <item name="statusBarScrim">@color/black</item>-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="App.Theme" parent="Base.Theme" />


    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>