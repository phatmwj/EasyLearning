<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">#1E1F21</item>
        <item name="android:statusBarColor">#1E1F21</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
<!--        <item name="statusBarScrim">@color/black</item>-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="App.Theme" parent="Base.Theme" />


    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorOnPrimary">@color/app_color</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="information_edit_text">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>
    <style name="title_text_style">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="default_text_style">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="small_text_style">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>
    <style name="big_text_style">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    <style name="regular_text_style">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="bold_text_style">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="medium_text_style">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="label_edit_text">
        <item name="fontFamily"> @font/roboto_medium </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="app_edit_text">
        <item name="fontFamily"> @font/roboto_medium </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/bg_edit_txt_custom</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="app_edit_text_search">
        <item name="fontFamily"> @font/roboto_medium </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="hintTextColor">#4D000000</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="CustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>