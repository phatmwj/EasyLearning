<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="a"
            type="androidx.appcompat.app.AppCompatActivity" />
        <variable
            name="isBack"
            type="boolean" />
        <variable
            name="countItemCart"
            type="java.lang.Integer" />

    </data>

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/layout_back"
                android:onClick="@{()->a.onBackPressed()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingVertical="@dimen/_12sdp"
                >
                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/ic_back"
                    />
            </RelativeLayout>

            <TextView
                style="@style/title_text_style"
                android:id="@+id/tv_header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{title, default=hahah}"
                android:layout_toEndOf="@id/layout_back"
                android:layout_toStartOf="@id/layout_other"
                android:textSize="@dimen/_16ssp"
                android:paddingVertical="@dimen/_8sdp"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Đăng nhập"
                android:gravity="center"
                style="@style/medium_text_style"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_12ssp"
                android:layout_marginVertical="@dimen/_7sdp"/>


            <FrameLayout
                android:id="@+id/layout_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_other"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cart"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="@dimen/_16sdp"
                    android:layout_gravity="bottom|end"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="@{String.valueOf(countItemCart)}"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>